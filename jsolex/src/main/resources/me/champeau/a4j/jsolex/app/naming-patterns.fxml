<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="480.0" prefWidth="900.0" styleClass="params-dialog" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.champeau.a4j.jsolex.app.jfx.NamingPatternEditor">
    <center>
        <HBox>
            <!-- Navigation Sidebar -->
            <VBox styleClass="navigation-sidebar" prefWidth="280" minWidth="260" maxWidth="320">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>
                <VBox fx:id="navigationContent" styleClass="navigation-content" VBox.vgrow="ALWAYS">
                    <ListView fx:id="elements" styleClass="embedded-editor" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                            <Insets bottom="8"/>
                        </VBox.margin>
                    </ListView>
                    <HBox alignment="CENTER" spacing="8">
                        <Button styleClass="default-button,editor-button" mnemonicParsing="false" onAction="#addNewItem"
                                text="+"/>
                        <Button styleClass="default-button,editor-button" mnemonicParsing="false"
                                onAction="#removeSelectedItem" text="-"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Content area with embedded editor -->
            <ScrollPane styleClass="content-scroll-pane" fitToWidth="true" HBox.hgrow="ALWAYS">
                <VBox styleClass="embedded-editor" spacing="16">
                    <padding>
                        <Insets top="16" right="16" bottom="16" left="16"/>
                    </padding>

                    <VBox styleClass="panel-section" spacing="12">
                        <GridPane styleClass="form-grid" hgap="12" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints minWidth="150" prefWidth="150"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints minHeight="200" prefHeight="200" vgrow="ALWAYS"/>
                            </rowConstraints>

                            <Label text="%label" styleClass="field-label" GridPane.columnIndex="0"
                                   GridPane.rowIndex="0"/>
                            <TextField fx:id="label" styleClass="text-field" GridPane.columnIndex="1"
                                       GridPane.rowIndex="0"/>

                            <Label text="%pattern" styleClass="field-label" GridPane.columnIndex="0"
                                   GridPane.rowIndex="1"/>
                            <TextField fx:id="pattern" styleClass="text-field" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1"/>

                            <Label text="%datetime.format" styleClass="field-label" GridPane.columnIndex="0"
                                   GridPane.rowIndex="2"/>
                            <TextField fx:id="datetimeFormat" styleClass="text-field" GridPane.columnIndex="1"
                                       GridPane.rowIndex="2"/>

                            <Label text="%date.format" styleClass="field-label" GridPane.columnIndex="0"
                                   GridPane.rowIndex="3"/>
                            <TextField fx:id="dateFormat" styleClass="text-field" GridPane.columnIndex="1"
                                       GridPane.rowIndex="3"/>

                            <Label text="%example" styleClass="field-label" GridPane.columnIndex="0"
                                   GridPane.rowIndex="4"/>
                            <TextField fx:id="example" styleClass="text-field" editable="false"
                                       style="-fx-font-weight: bold; -fx-text-fill: #0056b3; -fx-background-color: #f8f9fa;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                            <ScrollPane styleClass="content-scroll-pane" fitToWidth="true" GridPane.columnSpan="2"
                                        GridPane.rowIndex="5" VBox.vgrow="ALWAYS">
                                <GridPane.margin>
                                    <Insets top="8"/>
                                </GridPane.margin>
                                <VBox fx:id="tokens" styleClass="field-group" spacing="4">
                                    <padding>
                                        <Insets top="8" right="8" bottom="8" left="8"/>
                                    </padding>
                                </VBox>
                            </ScrollPane>
                        </GridPane>
                    </VBox>
                </VBox>
            </ScrollPane>
        </HBox>
    </center>
    <bottom>
        <HBox styleClass="editor-button-bar" spacing="8">
            <Button styleClass="default-button" mnemonicParsing="false" onAction="#reset" text="%reset.to.defaults"
                    prefWidth="160" HBox.hgrow="NEVER"/>
            <HBox HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER_RIGHT" spacing="8">
                <Button styleClass="default-button" mnemonicParsing="false" onAction="#cancel" text="%cancel"
                        prefWidth="80"/>
                <Button styleClass="primary-button" mnemonicParsing="false" onAction="#close" text="%ok"
                        prefWidth="80"/>
            </HBox>
        </HBox>
    </bottom>
</BorderPane>
